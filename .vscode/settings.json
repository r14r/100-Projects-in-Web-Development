{
	"prettier.useTabs": true,
	"prettier.tabWidth": 4,
	"prettier.singleQuote": true,
	"prettier.printWidth": 200,
	"editor.formatOnSave": true,

	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/.classpath": true,
		"**/.project": true,
		"**/.settings": true,
		"**/.factorypath": true,
		"**/node_modules": true
	},
	"workspace.isHidden": true,
	"git.ignoreLimitWarning": true,
	"cSpell.words": [
		"viewbox"
	]
}
